<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each @model as |genre|}}
      <li class="rr-list-item" data-test-rr="genre-list-item">
        <LinkTo @route="genres.genre" genre.id  class="rr-genre-link" data-test-rr="genre-link">
          {{capitalize this.genre.name}}
          <span class="rr-pointer">{{fa-icon "angle-right"}}</span>
      </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if @isAddingGenre}}
      <form class="rr-inline-form" {{on "submit" this.saveGenre}}>
        <Input type="text" class="rr-input" @value={{this.newGenreName}} placeholder="New genre" data-test-rr="new-genre-input"/>
        <button type="submit" class="rr-action-button" disabled={{this.isAddButtonDisabled}} data-test-rr="new-genre-button">Add</button>
        <span class="rr-cancel-icon" role="button" {{on "click" this.cancelAddGenre}}>{{fa-icon "times"}}</span>
      </form>
    {{else}}
      <label {{on "click" this.addGenre}} data-test-rr="new-genre-label">
        {{fa-icon "plus"}}
        <span class="ml1">Add new genre</span>
      </label>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>