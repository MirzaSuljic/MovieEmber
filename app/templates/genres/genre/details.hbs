<section class="rr-panel b--solid br1 bw1">
  <button type="button" class="rr-action-button fr" onclick={{on "click" (fn this.model @if @isEditing "save" "edit") }}>
    {{if @isEditing "Save" "Edit"}}
  </button>
  <h3>Description</h3>
  {{#if @isEditing}}
    <textarea class="rr-textarea" @value={{this.model.description}}></textarea>
  {{else}}
    <p>{{@model.description}}</p>
  {{/if}}
</section>